<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_margin"
        android:background="@color/color_gray_line"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/v_line"
        android:layout_marginTop="@dimen/text_title_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_13"
            android:textColor="@color/text_content_gray"
            android:text="第1"/>
        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_middle_28"
            android:textColor="@color/text_black_80"
            android:layout_marginTop="5dp"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_16"
            android:textColor="@color/text_black_60"
            android:layout_marginTop="5dp"
            android:text="科怀-莱昂纳德"/>
        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_15"
            android:textColor="@color/text_title_gray"
            android:layout_marginTop="5dp"
            android:text="马刺"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_kh"
        android:layout_marginRight="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/iv_team"
        android:layout_marginRight="24dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_spurs"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>