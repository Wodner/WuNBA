<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginBottom="@dimen/px_6"
    app:cardElevation="@dimen/px_10">



    <RelativeLayout
        android:background="@drawable/ripple_touch_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/text_margin_5"
            android:layout_marginBottom="@dimen/text_margin_5"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_13"
                android:textColor="@color/text_content_gray"
                android:text="第1"/>
            <TextView
                android:id="@+id/tv_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle_28"
                android:textColor="@color/text_black_80"
                android:layout_marginTop="@dimen/text_margin_3"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_15"
                android:textColor="@color/text_black_60"
                android:layout_marginTop="@dimen/text_margin_3"
                android:text="科怀-莱昂纳德"/>
            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_15"
                android:textColor="@color/text_title_gray"
                android:layout_marginTop="@dimen/text_margin_3"
                android:text="马刺"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_team"
            android:layout_marginRight="24dp"
            android:layout_marginTop="17dp"
            android:layout_width="@dimen/px_78"
            android:layout_height="@dimen/px_78"
            android:src="@mipmap/ic_spurs"
            android:layout_marginEnd="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/iv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_kh"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_team"
            android:layout_toStartOf="@+id/iv_team" />
    </RelativeLayout>

</android.support.v7.widget.CardView>