<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/team_bg">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_team_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_60"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_team"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_18"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/iv_team_detail"
                    android:layout_toRightOf="@id/tv_team_name"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/text_margin_8"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/team_about"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_record"
                android:layout_marginTop="@dimen/text_margin_8"
                android:layout_below="@id/tv_team_name"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_small_16"/>
        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"
                    android:textStyle="bold"
                    android:text="排名 : "/>
                <TextView
                    android:id="@+id/tv_team_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/text_margin_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"
                    android:textStyle="bold"
                    android:text="连续战绩 : "/>
                <TextView
                    android:id="@+id/tv_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/text_margin_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"
                    android:textStyle="bold"
                    android:text="教练 : "/>
                <TextView
                    android:id="@+id/tv_team_coach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_small_12"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>