<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_list"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<video-->
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_400" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_margin_3"
            android:paddingBottom="@dimen/text_margin_3"
            android:paddingLeft="@dimen/text_margin_5"
            android:paddingRight="@dimen/text_margin_5"
            android:background="@drawable/shape_tran_black_bg"
            android:visibility="visible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/latest_head_icon_time"/>
            <TextView
                android:id="@+id/tv_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin_3"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="08:00"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_80"
        android:paddingTop="@dimen/text_margin_5"
        android:paddingLeft="@dimen/text_margin"
        android:paddingBottom="@dimen/text_margin_5"
        android:textSize="@dimen/text_small_15"
        android:text="2016-2017赛季马刺夺得总冠军"/>


    <RelativeLayout
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin_5"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="02-18 11:53"/>
        <TextView
            android:id="@+id/tv_share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="分享"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_toLeftOf="@id/tv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin_5"
            android:src="@drawable/selector_share_bg"/>


        <TextView
            android:id="@+id/tv_comm_num"
            android:layout_toLeftOf="@id/iv_share"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_margin"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="21"/>
        <ImageView
            android:id="@+id/iv_comm"
            android:layout_toLeftOf="@id/tv_comm_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin_5"
            android:src="@drawable/selector_comment_bg"/>


        <TextView
            android:id="@+id/tv_fav_num"
            android:layout_toLeftOf="@id/iv_comm"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="99"/>
        <ImageView
            android:id="@+id/iv_fav"
            android:layout_marginRight="@dimen/text_margin_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_fav_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/latest_fav_nofocus_normal"/>
    </RelativeLayout>


</LinearLayout>