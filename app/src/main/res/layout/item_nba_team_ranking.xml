<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_gray_item">

    <LinearLayout
        android:id="@+id/ll_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_96">

       <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/text_margin_5"
            android:paddingBottom="@dimen/text_margin_5">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="0dp"
               android:layout_weight="3"
               android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_rank_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_black_60"
                    android:paddingLeft="@dimen/text_margin_16"
                    android:text="NO.1"/>
                <ImageView
                    android:id="@+id/iv_team_icon"
                    android:layout_marginLeft="@dimen/text_margin_16"
                    android:layout_width="@dimen/px_68"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_spurs"/>
           </LinearLayout>
            <TextView
                android:id="@+id/tv_team_name"
                android:layout_marginLeft="@dimen/text_margin_16"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_60"
                android:text="马刺"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/text_margin_5"
            android:paddingBottom="@dimen/text_margin_5">
            <TextView
                android:id="@+id/tv_team_win"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_black_60"
                android:layout_height="wrap_content"
                android:text="82"/>
            <TextView
                android:id="@+id/tv_team_lose"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_black_60"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:id="@+id/tv_team_winProbility"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_black_60"
                android:layout_height="wrap_content"
                android:text="100%"/>
            <TextView
                android:id="@+id/tv_team_winBehind"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_black_60"
                android:layout_height="wrap_content"
                android:text="0.0"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/color_gray_line"/>

</LinearLayout>