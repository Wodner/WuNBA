<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:layout_marginBottom="@dimen/px_6"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/px_10">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/selector_white_gray_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<video-->
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_360" />
            <ImageView
                android:id="@+id/iv_new_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_360"
                android:src="@mipmap/latest_pic_head_loading_720px"/>
            <TextView
                android:id="@+id/tv_imager_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_5"
                android:paddingLeft="@dimen/text_margin_5"
                android:paddingBottom="@dimen/text_margin_3"
                android:paddingTop="@dimen/text_margin_3"
                android:paddingRight="@dimen/text_margin_8"
                android:textColor="@color/white_70"
                android:text="10图"
                android:background="@drawable/shape_tran_default_bg"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black_80"
            android:paddingTop="@dimen/text_margin_5"
            android:paddingLeft="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin_5"
            android:textSize="@dimen/text_small_15"
            android:text="2016-2017赛季马刺夺得总冠军"/>

        <RelativeLayout
            android:paddingRight="@dimen/text_margin"
            android:paddingLeft="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin_5"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_new_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_small_12"
                android:textColor="@color/text_content_gray"
                android:text="02-18 11:53"/>


            <TextView
                android:id="@+id/tv_comm_num"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_12"
                android:textColor="@color/text_content_gray"
                android:text="21"/>


            <ImageView
                android:id="@+id/iv_comm"
                android:layout_toLeftOf="@id/tv_comm_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_5"
                android:src="@drawable/video_icon_comment_normal"/>

            <TextView
                android:id="@+id/tv_fav_num"
                android:layout_toLeftOf="@id/iv_comm"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_12"
                android:textColor="@color/text_content_gray"
                android:text="99"/>

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_marginRight="@dimen/text_margin_5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_fav_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/latest_fav_nofocus_normal"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>