<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/selector_white_gray_item"
    android:id="@+id/ll_item_list"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small_16"
        android:textColor="@color/text_black_80"
        android:layout_marginTop="@dimen/text_margin_5"
        android:layout_marginLeft="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:text="马刺2016-17夺冠高清图"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/text_margin_5"
        android:layout_marginTop="@dimen/text_margin_5"
        android:layout_marginLeft="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_nbapic_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_180"
            android:src="@mipmap/latest_pic_social_loading150_150px"/>
        <ImageView
            android:id="@+id/iv_nbapic_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_180"
            android:layout_marginLeft="@dimen/text_margin_8"
            android:layout_marginRight="@dimen/text_margin_8"
            android:src="@mipmap/latest_pic_social_loading150_150px"/>
        <ImageView
            android:id="@+id/iv_nbapic_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_180"
            android:src="@mipmap/latest_pic_social_loading150_150px"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:layout_marginBottom="@dimen/text_margin_5"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pub_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="02-18 11:53"/>
        <!--<TextView-->
            <!--android:id="@+id/tv_share"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="@dimen/text_small_12"-->
            <!--android:textColor="@color/text_content_gray"-->
            <!--android:text="分享"/>-->

        <!--<ImageView-->
            <!--android:id="@+id/iv_share"-->
            <!--android:layout_toLeftOf="@id/tv_share"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/text_margin_5"-->
            <!--android:src="@drawable/selector_share_bg"/>-->
        <TextView
            android:id="@+id/tv_comm_num"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_margin"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="21"/>
        <ImageView
            android:id="@+id/iv_comm"
            android:layout_toLeftOf="@id/tv_comm_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin_5"
            android:src="@drawable/selector_comment_bg"/>
        <TextView
            android:id="@+id/tv_fav_num"
            android:layout_toLeftOf="@id/iv_comm"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_12"
            android:textColor="@color/text_content_gray"
            android:text="99"/>
        <ImageView
            android:id="@+id/iv_fav"
            android:layout_marginRight="@dimen/text_margin_5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_fav_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/latest_fav_nofocus_normal"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_line"/>

</LinearLayout>