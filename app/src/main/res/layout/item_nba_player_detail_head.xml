<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@mipmap/team_bg">

    <RelativeLayout
        android:paddingBottom="@dimen/px_30"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_player_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/iv_team_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_player_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_birth_draft"
            android:layout_marginBottom="@dimen/text_margin_12"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_12"
                android:text="生日:"
                />
            <TextView
                android:id="@+id/tv_birth"
                android:layout_marginLeft="@dimen/text_margin_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_12"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_12"
                android:layout_marginLeft="@dimen/text_margin_5"
                android:text="选秀:"
                />
            <TextView
                android:id="@+id/tv_draftyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/text_margin_3"
                android:textSize="@dimen/text_small_12"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_team_body"
            android:layout_marginBottom="@dimen/text_margin_12"
            android:layout_above="@id/ll_birth_draft"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_12"/>
            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/text_margin_5"
                android:textSize="@dimen/text_small_12"/>
            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_12"
                android:layout_marginLeft="@dimen/text_margin_5" />
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/text_margin_5"
                android:textSize="@dimen/text_small_12"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/text_margin_12"
            android:layout_above="@id/ll_team_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_jsersey_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_18"/>
            <TextView
                android:id="@+id/tv_player_name"
                android:layout_marginLeft="@dimen/text_margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_jsersey_num"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_18" />

            <TextView
                android:id="@+id/tv_player_en_name"
                android:layout_marginLeft="@dimen/text_margin_5"
                android:layout_below="@id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_jsersey_num"
                android:textColor="@color/white_70"
                android:textSize="@dimen/text_small_12" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>